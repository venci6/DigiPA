<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.liz.digipa.Daily">

    <TextView
        android:id="@+id/date"
        android:textSize="50dp"
        android:textStyle="bold"
        android:text="Testing"
        android:textColor="#B8BEBC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:background="#52534E"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="5dp">

    <TextView
        android:id="@+id/annual_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/annualEvents"
        android:textSize="30dp"
        android:background="#FF9147"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/appointments"
        android:text="@string/appointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:background="@color/light_blue"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/tasks"
        android:text="@string/tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:background="#33ADD6"
        android:layout_marginTop="70dp"/>

</LinearLayout>

</RelativeLayout>
